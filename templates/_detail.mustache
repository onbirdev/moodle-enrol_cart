{{!
    @template enrol_cart/_detail

    Example context (json):
    {
        "show_detail": true,
        "cart": {
            "user": {
                "full_name": "",
                "profile_url": ""
            }
        }
    }
}}
{{#show_detail}}
    <div class="cart-summary cart-summary--detail">
        {{#cart.user}}
            <div class="cart-summary__grid">
                <div class="cart-summary__name">{{#str}} user, enrol_cart {{/str}}:</div>
                <div class="cart-summary__value">
                    <a href="{{cart.user.profile_url}}">{{cart.user.full_name}}</a>
                </div>
            </div>
        {{/cart.user}}
    </div>
{{/show_detail}}