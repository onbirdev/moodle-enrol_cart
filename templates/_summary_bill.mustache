{{!
    @template enrol_cart/_summary_bill
}}
<div class="cart-summary cart-summary--bill">
    <div class="cart-summary__grid cart-summary__price">
        <div class="cart-summary__name">{{#str}} total_order_amount, enrol_cart {{/str}}:</div>
        <div class="cart-summary__value"><span class="currency">{{{cart.final_price_formatted}}}</span></div>
    </div>
    {{#cart.items_discount_amount}}
        <div class="cart-summary__grid cart-summary__discount">
            <div class="cart-summary__name">{{#str}} discount, enrol_cart {{/str}}:</div>
            <div class="cart-summary__value"><span class="currency">{{{cart.items_discount_amount_formatted}}}</span></div>
        </div>
    {{/cart.items_discount_amount}}
    {{#cart.coupon_discount_amount}}
        <div class="cart-summary__grid cart-summary__discount">
            <div class="cart-summary__name">{{#str}} coupon_discount, enrol_cart {{/str}}:</div>
            <div class="cart-summary__value"><span class="currency">{{{cart.coupon_discount_amount_formatted}}}</span></div>
        </div>
    {{/cart.coupon_discount_amount}}
    <div class="cart-summary__grid cart-summary__payable">
        <div class="cart-summary__name">{{#str}} payable, enrol_cart {{/str}}:</div>
        <div class="cart-summary__value"><span class="currency">{{{cart.final_payable_formatted}}}</span></div>
    </div>
</div>