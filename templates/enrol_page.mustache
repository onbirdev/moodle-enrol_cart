{{!
    @template enrol_cart/enrol_page

    Example context (json):
    {
        "instance": {
            "has_discount": true,
            "add_to_cart_url": "",
            "price": 19.00,
            "price_formatted": "19.00$",
            "payable": 10.00,
            "payable_formatted": "10.00$"
        },
        "can_enrol: true,
    }
}}
<div class="cart-enrol d-flex flex-column align-items-center">
    {{#instance.name}}
        <h3 class="cart-ernol__title mb-2">{{instance.name}}</h3>
    {{/instance.name}}
    {{#instance.instructions}}
        <div class="cart-enrol__instructions mb-2">
            {{{instance.instructions}}}
        </div>
    {{/instance.instructions}}
    <div class="cart-enrol__price">
        {{#instance.has_discount}}<div class="cart-item__price"><span class="price currency">{{{instance.price_formatted}}}</span></div>{{/instance.has_discount}}
        {{#instance.payable_formatted}}<div class="cart-item__payable"><span class="payable currency">{{{instance.payable_formatted}}}</span></div>{{/instance.payable_formatted}}
    </div>
    {{#can_enrol}}
    <div class="cart-enrol__btn mt-2">
        <a class="btn btn-secondary btn-add-to-cart" href="{{{instance.add_to_cart_url}}}">
            <i class="fa fa-cart-plus"></i>{{#str}} add_to_cart, enrol_cart {{/str}}
        </a>
    </div>
    {{/can_enrol}}
    {{#information}}
    <div class="cart-enrol__info mt-2">
        {{{information}}}
    </div>
    {{/information}}
</div>
