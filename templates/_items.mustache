{{!
    @template enrol_cart/_items

    Example context (json):
    {
        "items": {
            "course": {
                "title": "Course title",
                "image_url": ""
            },
            "view_url": "https://site.com/course/view.php",
            "has_discount": true,
            "price_formatted": "10.00$",
            "payable_formatted": "8.00$",
            "discount_percent_formatted": "20%",
            "can_remove_items": true,
            "remove_url": "https://site.com/enrol/cart/do.php"
        }
    }
}}
<div class="cart-items">
    {{#items}}
        <div class="cart-item">
            <div class="cart-item__grid">
                <div class="cart-item__thumb">
                    {{#course.image_url}}
                        <a class="cart-item__image d-flex justify-content-sm-center" href="{{{view_url}}}">
                            <img class="img-responsive" src="{{course.image_url}}" alt="{{course.title}}"/>
                        </a>
                    {{/course.image_url}}
                </div>
                <div class="cart-item__info">
                    <h5 class="cart-item__title">
                        <a href="{{{view_url}}}">{{course.title}}</a>
                    </h5>
                    <div class="cart-item__cost">
                        {{#has_discount}}
                            <div class="cart-item__price"><span class="currency">{{{price_formatted}}}</span></div>
                            <div class="cart-item__payable">
                                <span class="currency">{{{payable_formatted}}}</span>
                                <span class="cart-item__discount-percent">{{discount_percent_formatted}}</span>
                            </div>
                        {{/has_discount}}
                        {{^has_discount}}
                            <div class="cart-item__payable"><span class="currency">{{{payable_formatted}}}</span></div>
                        {{/has_discount}}
                    </div>
                    {{#can_remove_items}}
                        <div class="cart-item__actions">
                            <a href="{{{remove_url}}}" class="btn btn-secondary"><i class="fa fa-remove"></i> {{#str}}
                                remove{{/str}}</a>
                        </div>
                    {{/can_remove_items}}
                </div>
            </div>
        </div>
    {{/items}}
</div>
